# ====================================================================
# GESCO - VARIABLES DE ENTORNO
# ====================================================================
# Copia este archivo como .env y completa con tus valores reales
# NUNCA subas el archivo .env al repositorio

# Base de Datos PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=gesco_db
POSTGRES_USERNAME=tu_usuario_postgres
POSTGRES_PASSWORD=tu_contraseña_segura

# JWT Settings - CAMBIA LA CLAVE SECRETA
JWT_SECRET_KEY=cambia_esta_clave_por_una_de_32_caracteres_minimo
JWT_ISSUER=GesCo.Api
JWT_AUDIENCE=GesCo.Client
JWT_EXPIRY_MINUTES=60
JWT_REFRESH_EXPIRY_DAYS=7

# Configuración de Seguridad
SECURITY_MAX_FAILED_ATTEMPTS=5
SECURITY_LOCKOUT_MINUTES=15
SECURITY_PASSWORD_MIN_LENGTH=6
SECURITY_PASSWORD_REQUIRE_DIGIT=true
SECURITY_PASSWORD_REQUIRE_UPPERCASE=true
SECURITY_PASSWORD_REQUIRE_NON_ALPHANUMERIC=false

# Configuración de Suscripciones
SUBSCRIPTION_TRIAL_DAYS=30
SUBSCRIPTION_MAX_USERS_BASIC=10
SUBSCRIPTION_MAX_USERS_PREMIUM=50
SUBSCRIPTION_MAX_USERS_ENTERPRISE=-1